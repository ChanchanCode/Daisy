generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Place {
  id              String   @id
  title           String
  address         String
  lat             Float
  lng             Float
  rating          Float?
  userRatingCount Int?
  category        String?
  photoUrl        String?
  openNow         Boolean?
  website         String?
  rawData         String?
  openingHours    String?  // Storing as JSON string for simplicity/compatibility 
  cachedAt        DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([lat, lng])
}
